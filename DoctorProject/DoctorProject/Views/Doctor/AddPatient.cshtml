<script>
    function validateform(form) {

        var patientname = document.getElementById("pname").value;
        var Doctorid = document.getElementById("did").value;
        var PatientBill = document.getElementById("pbill").value;


        if (patientname == null || patientname == "") {
            document.getElementById("showerror1").innerHTML = "Please enter patient name";
            return false;
        } if (Doctorid == null || Doctorid == "") {
            document.getElementById("showerror2").innerHTML = "please enter doctor id  ";
            return false;
        }
        if (PatientBill == null || PatientBill == "") {
            document.getElementById("showerror3").innerHTML = "please enter patient bill  ";
            return false;
        }

        return true;
    }
</script>


