    <input type="number" id="did" name="DoctorId" />
    <span id="showerror2" style="color:red;font-weight:bold"></span>
    <br />
    <br />
    <br />
    <label for="pbill">Patient Bill </label>
    <input type="number" id="pbill" name="PatientBill" />
    <span id="showerror3" style="color:red;font-weight:bold"></span>
    <br />
    <br />
    <input type="submit" value="INSERT" class="btn btn-default" />

</form>
