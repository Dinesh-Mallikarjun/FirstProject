            } if (name == null || name == "") {
                document.getElementById("showerror").innerHTML = "Check name";
                return false;
            } if (Location == null || Location == "") {
                document.getElementById("showerror").innerHTML = "Check Location";
                return false;
            } if (CutOffPercentage == null || CutOffPercentage == "") {
                document.getElementById("showerror").innerHTML = "Check percentage";
                return false;
            } if (NumberOfSeatsAvailable == null || NumberOfSeatsAvailable == "") {
                document.getElementById("showerror").innerHTML = "Check number of seats available";
                return false;
            }
            return true;
        }
