    <script>
        function validateform(form)
        {
            var Id = document.getElementById("cid").value;
            var name = document.getElementById("cname").value;
            var Location = document.getElementById("location").value;
            var CutOffPercentage = document.getElementById("cper").value;
            var NumberOfSeatsAvailable = document.getElementById("seats").value;

            if (Id == null || Id == "") {
                document.getElementById("showerror").innerHTML = " Check ID ";
